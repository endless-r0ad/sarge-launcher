{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Sarge Launcher",
  "version": "0.2.0",
  "identifier": "sarge-launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "width": 1280,
        "resizable": true,
        "title": "Sarge Launcher",   
        "transparent": false,
        "zoomHotkeysEnabled": true,
        "minHeight": 450,
        "minWidth": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$CACHE/**", "**/.cache/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
